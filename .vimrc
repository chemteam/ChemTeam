set nocompatible
set nowrap
set autoindent
set copyindent
set backspace=indent,eol,start
set tabstop=4
set shiftwidth=4
set smarttab
set hlsearch
set incsearch
set showmatch
set ignorecase
set smartcase
set number
set ruler
set hidden
set expandtab
set exrc
set secure

set nobackup

syntax on
colo desert
filetype plugin indent on

set list
set listchars=tab:>.,trail:.,extends:#,nbsp:.

set pastetoggle=<F2>
set mouse=a

nmap <silent> ; :
